pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'kanth', url: 'https://github.com/Muralee2/myweb-krishnaveni.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-new']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war  ec2-user@172.31.41.53:/home/ec2-user/apache-tomcat-9.0.111/webapps/
                    
                    ssh ec2-user@172.31.41.53 /home/ec2-user/apache-tomcat-9.0.111/bin/shutdown.sh
                    
                    ssh ec2-user@172.31.41.53 /home/ec2-user/apache-tomcat-9.0.111/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
